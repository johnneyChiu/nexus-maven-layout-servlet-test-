	<properties>
		<!--指定Maven用什么编码来读取源码及文档 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--指定Maven用什么编码来呈现站点的HTML文件 -->
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<!-- junit version -->
		<project.junit.version>3.8.1</project.junit.version>
		<!-- spring version -->
		<project.springframework.version>4.3.2.RELEASE</project.springframework.version>
		<!-- hibernate version -->
		<project.hibernate.version>4.2.2.Final</project.hibernate.version>
		<!-- mybatis version -->
		<project.mybatis.version>3.2.0</project.mybatis.version>
		<!-- log4j version -->
		<project.log4j.version>1.2.17</project.log4j.version>
		<!-- mysql version -->
		<project.mysql.version>5.1.25</project.mysql.version>
		<!-- maven plugin -->
		<plugins.maven.plugin>2.4.3</plugins.maven.plugin>
		<!-- slf4j -->
		<project.slf4j.version>1.7.21</project.slf4j.version>
		<!-- logback -->
		<project.logback.version>1.1.7</project.logback.version>
		<!-- jetty -->
		<project.jetty.version>9.4.0.M1</project.jetty.version>
		<!-- servlet api -->
		<web.servlet.api>2.5</web.servlet.api>
	</properties>

	<repositories>
		<!-- 私库 -->
		<repository>
			<id>maven-central</id>
			<name>maven-central</name>
			<url>http://127.0.0.1:8081/nexus/repository/myPoxy</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencyManagement>
		<!-- 依赖 -->
		<dependencies>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${project.slf4j.version}</version>
			</dependency>
			<dependency>
